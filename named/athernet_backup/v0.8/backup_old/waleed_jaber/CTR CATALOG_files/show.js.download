function ViewLayer() {
	var openLayer = document.getElementById("ShowLayer");
	var btn_d = document.getElementById("btn_detail");
	var l_menu = document.getElementById("leftmenu");
	if(openLayer.style.display == "block") {			
		btn_d.src = "/images/btn_flip_open.jpg";
		openLayer.style.display = "none";			
		l_menu.style.display = "block";
	} else {
		btn_d.src = "/images/btn_flip_close.jpg";		
		openLayer.style.display = "block";				
		l_menu.style.display = "none";
	}
}

